#!/usr/bin/env ruby

require "redcarpet"

def markdown(text)
  options = {
    autolink: true,
    fenced_code_blocks: true,
    tables: true
  }

  renderer = Redcarpet::Render::HTML.new
  markdown = Redcarpet::Markdown.new(renderer, options)

  return markdown.render(text)
end

puts(markdown(File.read(ARGV[0])))
